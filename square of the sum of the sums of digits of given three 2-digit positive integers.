a=int(input('enter a number:'))
b=int(input('enter b number:'))
c=int(input('enter c number:'))
d=int(input('enter d number:'))
a_sum=a%10+a//10
b_sum=b%10+b//10
c_sum=c%10+c//10
d_sum=d%10+d//10
sum=a_sum+b_sum+c_sum+d_sum
square=sum**2
print(f'sum of digits of:{a_sum}')
print(f'sum of digits of:{b_sum}')
print(f'sum of digits of:{c_sum}')
print(f'sum of digits of:{d_sum}')
print(f'sum of {a_sum},{b_sum},{c_sum} and {d_sum}')
print(f'square of {sum} is:{square}')
